<!DOCTYPE html>
<html>
  <head>
    <title>SnackTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if session[:user_id] %>
        <h3 class="inline">Welcome <%= get_current_user %></h3>
        <%= link_to "Logout", logout_path, class: "right-align", method: "DELETE" %>
      <% else %>
        <%= link_to "Login", login_path %>
      <% end %>
    <%= yield %>
  </body>
</html>
